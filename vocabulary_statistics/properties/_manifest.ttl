@prefix mf: <http://www.w3.org/2001/sw/DataAccess/tests/test-manifest#> .
@prefix sd: <http://www.w3.org/ns/sparql-service-description#> .
@prefix kgi: <http://ns.inria.fr/kg/index#> .
@prefix earl: <http://www.w3.org/ns/earl#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .


<> a mf:Manifest ;
    kgi:requiredAssets (
        <../loadLOV.ttl>
    ) ;
    mf:entries (
        <propertyUsage.ttl>
        <datasetOccurence.ttl>
        <datasetOccurenceCount.ttl>
    ) .

<propertyUsage.ttl> a mf:ManifestEntry ;
    kgi:onSuccess (
        [
            # Creating the ontology element description of each property
            mf:action """
            prefix voaf: <http://purl.org/vocommons/voaf#>
            prefix kgi: <http://ns.inria.fr/kg/index#>
            prefix xsd: <http://www.w3.org/2001/XMLSchema#>
            prefix prov: <http://www.w3.org/ns/prov#>
            prefix dcat: <http://www.w3.org/ns/dcat#>
            prefix void: <http://rdfs.org/ns/void#>
            prefix owl: <http://www.w3.org/2002/07/owl#>
            prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
            PREFIX sd: <http://www.w3.org/ns/sparql-service-description#>

            INSERT {
                ?elem voaf:reusedByDatasets 0 .
            }
            WHERE {
                ?elem a rdf:Property .
                FILTER( isIRI(?elem) )
            }
            """
        ]
    ) .

<datasetOccurence.ttl> a mf:ManifestEntry ;
    kgi:requiredAssets (
        <propertyUsage.ttl>
    ) ;
    kgi:onSuccess (
        [
            # Creating the occurences object of each property in each dataset
            mf:action """
            prefix voaf: <http://purl.org/vocommons/voaf#>
            prefix kgi: <http://ns.inria.fr/kg/index#>
            prefix xsd: <http://www.w3.org/2001/XMLSchema#>
            prefix prov: <http://www.w3.org/ns/prov#>
            prefix dcat: <http://www.w3.org/ns/dcat#>
            prefix void: <http://rdfs.org/ns/void#>
            prefix owl: <http://www.w3.org/2002/07/owl#>
            prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
            PREFIX sd: <http://www.w3.org/ns/sparql-service-description#>
            INSERT {
                ?elem voaf:usageInDataset ?elemDatasetOccurence ;
                    voaf:reusedByDatasets ?nbUsedByDatasets .
                ?elemDatasetOccurence a voaf:DatasetOccurences ;
                    voaf:inDataset ?endpointUrl .
            }
            WHERE {

                kgi: sd:namedGraph ?endpointGraph .
                GRAPH ?endpointGraph {
                    ?endpointGraph void:sparqlEndpoint ?endpointUrl .
                }

                SERVICE ?endpointUrl {
                    FILTER( EXISTS {
                        ?s ?elem ?o .
                    } )
                }
                
                ?elem a rdf:Property .
                FILTER( isIRI(?elem) )

                BIND( Iri( CONCAT( str(kgi:), MD5( CONCAT( STR(?elem) , STR(?endpointUrl) ) ) ) ) AS ?elemDatasetOccurence )
                ?elem voaf:reusedByDatasets ?occurences .
                BIND( ?occurences + 1 AS ?nbUsedByDatasets )
            };
            DELETE {
                ?elem voaf:reusedByDatasets ?occurencesLow .
            } 
            WHERE {
                
                ?elem a rdf:Property .
                FILTER( isIRI(?elem) )
                
                ?elem voaf:reusedByDatasets ?occurencesLow ;
                    voaf:reusedByDatasets ?occurencesHigh .
                FILTER( ?occurencesLow < ?occurencesHigh )
            }
            """
        ]
    ) .

<datasetOccurenceCount.ttl> a mf:ManifestEntry ;
    kgi:requiredAssets (
        <datasetOccurence.ttl>
    ) ;
    kgi:onSuccess (
        [
            # Counting the number of appearances of each property in each dataset
            mf:action """
            prefix voaf: <http://purl.org/vocommons/voaf#>
            prefix kgi: <http://ns.inria.fr/kg/index#>
            prefix xsd: <http://www.w3.org/2001/XMLSchema#>
            prefix prov: <http://www.w3.org/ns/prov#>
            prefix dcat: <http://www.w3.org/ns/dcat#>
            prefix void: <http://rdfs.org/ns/void#>
            prefix owl: <http://www.w3.org/2002/07/owl#>
            prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
            PREFIX sd: <http://www.w3.org/ns/sparql-service-description#>

            INSERT {
                ?elem voaf:usageInDataset ?elemDatasetOccurence ;
                    voaf:occurrencesInDatasets ?nbDatasetOccurences .
                ?elemDatasetOccurence a voaf:DatasetOccurences ;
                    voaf:occurrences ?nbTriples .
            }
            WHERE {
                kgi: sd:namedGraph ?endpointGraph .
                GRAPH ?endpointGraph {
                    ?endpointGraph void:sparqlEndpoint ?endpointUrl .
                }

                SERVICE ?endpointUrl {
                    SELECT ?elem (COUNT(*) AS ?nbTriples) WHERE {
                        ?s ?elem ?o .
                    } GROUP BY ?elem
                }
                
                ?elem a rdf:Property .
                FILTER( isIRI(?elem) )

                BIND( Iri( CONCAT( str(kgi:), MD5( CONCAT(STR(?elem) , STR(?endpointUrl) ) ) ) ) AS ?elemDatasetOccurence )
                BIND( IF( EXISTS {
                    ?elem voaf:occurrencesInDatasets ?datasetOccurences .
                }, ?datasetOccurences + ?nbTriples, ?nbTriples) AS ?nbDatasetOccurences )
            };
            DELETE {
                ?elem voaf:reusedByDatasets ?occurencesLow .
            } 
            WHERE {
                kgi: sd:namedGraph ?endpointGraph .
                GRAPH ?endpointGraph {
                    ?endpointGraph void:sparqlEndpoint ?endpointUrl .
                }
                
                ?elem a rdf:Property .
                FILTER( isIRI(?elem) )

                BIND( Iri( CONCAT( str(kgi:), MD5( CONCAT(STR(?elem) , STR(?endpointUrl) ) ) ) ) AS ?elemDatasetOccurence )

                ?elemDatasetOccurence voaf:occurrences ?occurencesLow ;
                    voaf:occurrences ?occurencesHigh .
                FILTER( ?occurencesLow < ?occurencesHigh )
            }
            """
        ]
    ) .